#define ZMK_POINTING_DEFAULT_MOVE_VAL 1200  // 600
#define ZMK_POINTING_DEFAULT_SCRL_VAL 25   // 10

#include <input/processors.dtsi>
#include <zephyr/dt-bindings/input/input-event-codes.h>
#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/ext_power.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/outputs.h>
#include <dt-bindings/zmk/pointing.h>
#include <dt-bindings/zmk/rgb.h>

&mmv_input_listener { input-processors = <&zip_xy_scaler 2 1>; };

&msc_input_listener { input-processors = <&zip_scroll_scaler 2 1>; };

&msc {
    acceleration-exponent = <1>;      // 0
    time-to-max-speed-ms = <100>;       // 300
    delay-ms = <0>;                   // 0
};

&mmv {
    time-to-max-speed-ms = <500>;
    acceleration-exponent = <1>;
    trigger-period-ms = <16>;
};

&mt { flavor = "balanced"; };

/ {
    behaviors {
        td0: td0 {
            compatible = "zmk,behavior-tap-dance";
            display-name = "Shift/Caps Lock Tap Dance";
            #binding-cells = <0>;
            bindings = <&kp LEFT_SHIFT>, <&kp CAPS>;
        };
    };

    rgb_encoder: rgb_encoder {
        compatible = "zmk,behavior-sensor-rotate";
        #sensor-binding-cells = <0>;
        bindings = <&rgb_ug RGB_BRI>, <&rgb_ug RGB_BRD>;
    };

    scroll_encoder: scroll_encoder {
        compatible = "zmk,behavior-sensor-rotate";
        #sensor-binding-cells = <0>;
        bindings = <&msc SCRL_DOWN>, <&msc SCRL_UP>;

        tap-ms = <100>;
    };

    combos {
        compatible = "zmk,combos";

        space {
            bindings = <&kp SPACE>;
            key-positions = <23 24>;
            timeout-ms = <30>;
            layers = <0 1>;
        };

        enter {
            bindings = <&kp ENTER>;
            key-positions = <37 38>;
            timeout-ms = <30>;
            layers = <0 1>;
        };

        toggle_colemak {
            bindings = <&tog 1>;
            key-positions = <31 32>;
        };

        esc {
            bindings = <&kp ESCAPE>;
            key-positions = <22 23>;
        };

        tab {
            bindings = <&kp TAB>;
            key-positions = <1 2>;
        };

        backspace {
            bindings = <&kp BACKSPACE>;
            key-positions = <11 10>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            display-name = "QWERTY";
            bindings = <
&none      &kp Q       &kp W       &kp E         &kp R         &kp T                                          &mmv MOVE_UP                     &kp Y             &kp U                &kp I          &kp O       &kp P               &none
&kp GRAVE  &mt LGUI A  &mt LALT S  &mt LSHIFT D  &mt LCTRL F   &kp G                          &mmv MOVE_LEFT  &mkp LCLK       &mmv MOVE_RIGHT  &kp H             &mt RIGHT_CONTROL J  &mt RSHIFT K   &mt RALT L  &mt RGUI SEMICOLON  &kp EQUAL
&none      &kp Z       &kp X       &kp C         &kp V         &kp B      &kp C_PLAY_PAUSE                    &mmv MOVE_DOWN                   &kp N             &kp M                &kp COMMA      &kp DOT     &kp FSLH            &none
                                   &kp TAB       &lt 3 ESCAPE  &kp SPACE                                                                       &mt RSHIFT ENTER  &lt 2 SINGLE_QUOTE   &kp BACKSPACE
            >;

            sensor-bindings = <&scroll_encoder>;
        };

        colemak {
            bindings = <
&trans  &kp Q       &kp W       &kp F         &kp P        &kp G                     &trans          &kp J   &kp L        &kp U         &kp Y       &kp SEMICOLON  &trans
&trans  &mt LGUI A  &mt LALT R  &mt LSHIFT S  &mt LCTRL T  &kp D             &trans  &trans  &trans  &kp H   &mt RCTRL N  &mt RSHIFT E  &mt RALT I  &mt RGUI O     &trans
&trans  &kp Z       &kp X       &kp C         &kp V        &kp B   &trans            &trans          &kp K   &kp M        &kp COMMA     &kp PERIOD  &kp SLASH      &trans
                                &trans        &trans       &trans                                    &trans  &trans       &trans
            >;

            sensor-bindings = <&scroll_encoder>;
            label = "COLEMAK";
        };

        lower_layer {
            display-name = "NUMBER_SYMBOL";
            bindings = <
&trans         &kp EXCL           &kp AT               &kp HASH             &kp DLLR            &kp PRCNT                                    &mmv MOVE_UP                     &kp CARET       &kp AMPS         &kp ASTRK      &kp LPAR           &kp RPAR     &trans
&kp BACKSLASH  &mt LGUI NUMBER_1  &mt LSHIFT NUMBER_2  &mt LSHIFT NUMBER_3  &mt LCTRL NUMBER_4  &kp NUMBER_5                 &mmv MOVE_LEFT  &mkp LCLK       &mmv MOVE_RIGHT  &kp NUMBER_6    &mt RCTRL N7     &mt RSHIFT N8  &mt RALT NUMBER_9  &mt RGUI N0  &kp MINUS
&trans         &none              &none                &none                &kp LEFT_BRACKET    &kp RIGHT_BRACKET  &trans                    &mmv MOVE_DOWN                   &kp LEFT_BRACE  &kp RIGHT_BRACE  &trans         &trans             &trans       &trans
                                                       &trans               &trans              &trans                                                                        &trans          &trans           &trans
            >;

            sensor-bindings = <&inc_dec_kp C_BRIGHTNESS_INC C_BRIGHTNESS_DEC>;
        };

        raise_layer {
            display-name = "FUNC_NAVI";
            bindings = <
&trans              &kp F1       &kp F2       &kp F3         &kp F4        &kp F5                                         &mmv MOVE_UP                     &kp HOME        &kp PAGE_DOWN   &kp PAGE_UP          &kp END          &kp INSERT       &trans
&kp LA(LG(DOLLAR))  &mt LGUI F6  &mt LALT F7  &mt LSHIFT F8  &mt LCTRL F9  &kp F10                        &mmv MOVE_LEFT  &mkp LCLK       &mmv MOVE_RIGHT  &kp LEFT        &mt RCTRL DOWN  &mt RSHIFT UP_ARROW  &mt RALT RIGHT   &mt RGUI DELETE  &kp LG(DOLLAR)
&trans              &kp F11      &kp F12      &kp GLOBE      &kp CAPSLOCK  &kp PRINTSCREEN  &kp C_MUTE                    &mmv MOVE_DOWN                   &mmv MOVE_LEFT  &mmv MOVE_DOWN  &mmv MOVE_UP         &mmv MOVE_RIGHT  &trans           &trans
                                              &trans         &trans        &none                                                                           &mkp LCLK       &trans          &mkp RCLK
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN>;
        };

        misc {
            display-name = "MISC";
            bindings = <
&trans      &bt BT_SEL 0  &bt BT_SEL 1          &bt BT_SEL 2       &bt BT_SEL 3  &bt BT_SEL 4                                   &mmv MOVE_UP                     &none            &rgb_ug RGB_EFR  &rgb_ug RGB_EFF  &none            &none            &none
&bt BT_CLR  &kp C_VOL_UP  &kp C_BRIGHTNESS_INC  &soft_off          &out OUT_TOG  &sys_reset                     &mmv MOVE_LEFT  &mkp LCLK       &mmv MOVE_RIGHT  &rgb_ug RGB_SPI  &rgb_ug RGB_SAI  &rgb_ug RGB_HUI  &rgb_ug RGB_BRI  &rgb_ug RGB_ON   &none
&none       &kp C_VOL_DN  &kp C_BRIGHTNESS_DEC  &ext_power EP_TOG  &none         &bootloader   &kp C_AL_LOCK                    &mmv MOVE_DOWN                   &rgb_ug RGB_SPD  &rgb_ug RGB_SAD  &rgb_ug RGB_HUD  &rgb_ug RGB_BRD  &rgb_ug RGB_OFF  &none
                                                &none              &none         &none                                                                           &none            &none            &none
            >;

            sensor-bindings = <&rgb_encoder>;
        };
    };

    conditional_layers {
        compatible = "zmk,conditional-layers";

        misc {
            if-layers = <2 3>;
            then-layer = <4>;
        };
    };
};
